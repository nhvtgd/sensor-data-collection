<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirm_buy_item_Frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:id="@+id/Frame_Register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20sp" >

        <!-- User Name -->

        <EditText
            android:id="@+id/UserName_Register"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:hint="user name"
            android:inputType="textPersonName" >
        </EditText>
        <!-- Email -->

        <EditText
            android:id="@+id/EmailAddress_Register"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:hint="your email"
            android:inputType="textEmailAddress" >
        </EditText>

        <!-- Password -->

        <EditText
            android:id="@+id/Password_Register"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:hint="password"
            android:inputType="textPassword" >
        </EditText>

        <EditText
            android:id="@+id/ConfirmPassword_Register"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:hint="confirm password"
            android:inputType="textPassword" >
        </EditText>

        <!-- Confirm -->

        <Button
            android:id="@+id/ConfirmButton_Register"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:background="@drawable/blue_background_login"
            android:text="Register"
            android:textStyle="bold" >
        </Button>

        <!-- Message Error Checking -->

        <TextView
            android:id="@+id/MessageError_Register"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:textStyle="italic" />
    </LinearLayout>

</ScrollView>